<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#9E9E9E"
    tools:context="com.example.android.musicalstructureapp.NowPlayingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nowPlaying_back_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/icon_arrow_back_48px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                style="@style/MenuParts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:background="#BDBDBD"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/current_artwork_nowPlaying"
                android:layout_width="336dp"
                android:layout_height="336dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/icon_album_artwork_default_48px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SongInfoTextPrimary"
                    tools:text="Current Title" />

                <TextView
                    android:id="@+id/-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/currentTitle"
                    style="@style/SongInfoTextPrimary"
                    android:text=" - " />

                <TextView
                    android:id="@+id/currentArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/-"
                    style="@style/SongInfoTextPrimary"
                    tools:text="Current Artist" />

                <TextView
                    android:id="@+id/currentAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/currentTitle"
                    style="@style/SongInfoTextSecondary"
                    tools:text="Current Album" />

            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_back_button_2_60px" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_play_button_60px" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_next_button_60px" />

    </LinearLayout>
</LinearLayout>
