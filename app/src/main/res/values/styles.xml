<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TODO new styles for same elements - back arrow image-->

    <style name="Menu" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuParts" parent="Menu">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="SongInfoTextPrimary" parent="MenuParts">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SongInfoTextSecondary" parent="SongInfoTextPrimary">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
